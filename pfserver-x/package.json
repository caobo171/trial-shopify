{
  "name": "pagefly-backend-ts",
  "version": "0.1.0",
  "description": "Backend for PageFly SaaS",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Minh Phan",
  "license": "ISC",
  "scripts": {
    "start": "yarn build && yarn serve",
    "watch-node": "nodemon -x 'node dist/server.js --inspect'",
    "watch": "concurrently \"yarn watch-ts\" \"yarn serve-debug\"",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve-local": "HTTPS=true yarn serve"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "public/*",
      "src/*",
      "node_modules/*"
    ],
    "watch": [
      "dist/**/*.js"
    ],
    "delay": "1000"
  },
  "dependencies": {
    "express": "4.16.4",
    "express-session": "1.15.6"
  },
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/express-session": "1.15.11",
    "@types/graphql": "14.0.3",
    "@types/node": "10.12.12",
    "concurrently": "4.1.0",
    "nodemon": "1.18.7",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "3.2.2"
  }
}
